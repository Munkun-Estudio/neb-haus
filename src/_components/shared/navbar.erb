<header class="relative w-full border-b border-black overflow-hidden">
  <div class="flex justify-between items-center px-8 py-4 relative z-10">
    
    <!-- Left video background -->
    <div class="relative w-1/4 h-32 overflow-hidden">
      <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover">
        <source src="/videos/background-left.mp4" type="video/mp4" />
        Twoja przeglądarka nie obsługuje wideo.
      </video>
    </div>

    <!-- Center site name -->
    <div class="absolute left-1/2 transform -translate-x-1/2 top-4 text-2xl font-bold z-20">
      SITE NAME
    </div>

    <!-- Right video background -->
    <div class="relative w-1/4 h-32 overflow-hidden">
      <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover">
        <source src="/videos/background-right.mp4" type="video/mp4" />
        Twoja przeglądarka nie obsługuje wideo.
      </video>
    </div>
  </div>

  <!-- Box with text -->
  <div class="w-full flex justify-center mt-2 mb-4 relative z-10">
    <div class="border-2 border-black px-6 py-2 text-2xl font-semibold bg-white bg-opacity-80">
      BOX WITH TEXT
    </div>
  </div>
</header>

